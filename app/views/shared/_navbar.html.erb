<div class="navbar-wagon">
  <!-- Logo -->
    <%= link_to root_path  do%>
     <%= image_tag "logo.png", alt: "logo", class: "navbar-wagon-brand", width: 100 %>
    <%end %>

  <div class="search-form">
    <input type="text" placeholder="Search">
    <button type="submit" class= "btn-dark-grey">Search</button>
  </div>

  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">
    <!-- Small devices -->
    <%= link_to "Add cocktail", new_cocktail_path, class: "navbar-wagon-item navbar-wagon-link" %>
