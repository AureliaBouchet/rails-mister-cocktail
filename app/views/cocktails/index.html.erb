<h1 class="text-center">Discover our cocktails</h1>

<div class="card-container">

  <%@cocktails.each do |cocktail| %>
  <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url(<%= cocktail.picture_url %>);">
    <div class="card-title">
      <h2> <%= link_to cocktail.name, cocktail_path(cocktail) %></h2>
    </div>
  </div>

  <% end %>

</div>

<%= link_to "Add a cocktail", new_cocktail_path %>
