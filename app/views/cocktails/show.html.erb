
<h1 class="text-center">Cocktail : <%= @cocktail.name %></h1>

<div class="card-container">
  <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url(<%= @cocktail.picture_url %>);">
  </div>

  <div class="big-card cocktail-description">
    <h2>Doses :</h2>
    <ul>
    <% @cocktail.doses.each do |dose| %>
      <li><%= dose.ingredient.name %> : <%= dose.description %> <%= link_to "", dose_path(dose), method: :delete, class: "fas fa-trash-alt" %> </li>
      <%end %>
    </ul>
   <i class="fas fa-plus"></i> <%= link_to "Add a new dose (ingredient/description pair)", new_cocktail_dose_path(@cocktail) %>
    <%= simple_form_for(@cocktail) do |f| %>
      <%= f.input :picture_url %>
      <%= f.submit %>
    <% end %>
  </div>
</div>

<div class="card-links-footer">
  <%= link_to "Back to cocktails", cocktails_path, class: 'btn btn-primary' %>
</div>
