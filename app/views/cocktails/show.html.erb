<h1>Cocktail : <%= @cocktail.name %></h1>

<h2>Doses :</h2>
<ul>
<% @cocktail.doses.each do |dose| %>
  <li><%= dose.ingredient.name %> : <%= dose.description %> <%= link_to "", dose_path(dose), method: :delete, class: "fas fa-trash-alt" %> </li>
  <%end %>
</ul>

<p><%= link_to "Add a new dose (ingredient/description pair)", new_cocktail_dose_path(@cocktail) %></p>
<p><%= link_to "Back to cocktails", cocktails_path %></p>
